{
  "name": "elong-ui",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "pnpm -C play dev",
    "dev:h5": "pnpm -C play-h5 dev",
    "build:h5": "pnpm -C packages/mVant build",
    "build:elong": "gulp -f script/build/index.ts",
    "publish:elong": "gulp -f script/publish/index.ts",
    "docs:h5-dev": "pnpm -C packages/mVant/site docs:dev",
    "docs:h5-build": "pnpm -C packages/mVant/site docs:build",
    "docs:dev": "pnpm run --filter site docs:dev",
    "docs:build": "pnpm run --filter site docs:build",
    "docs:deploy": "pnpm run --filter site docs:deploy",
    "release:h5": "pnpm -C packages/mVant/ui release",
    "release:web": "cd packages/mElement && node scripts/release.mjs",
    "release:simple": "cd packages/mElement && node scripts/simple-release.mjs",
    "prepare:release": "./prepare-release.sh",
    "check:release": "./check-release.sh",
    "test:esm": "cd packages/mElement && node scripts/test-esm.mjs",
    "lint:script": "eslint --fix --ext .ts,.tsx,.vue,.js,.jsx",
    "lint:style": "stylelint --fix \"*.{css,scss,less}\""
  },
  "author": "",
  "license": "MIT",
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts}": [
      "eslint --ext .js,.jsx,.vue,.ts,.tsx --fix --quiet ./"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@release-it/conventional-changelog": "^7.0.1",
    "@types/gulp": "^4.0.13",
    "@types/gulp-autoprefixer": "^0.0.34",
    "@types/gulp-sass": "^5.0.1",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/runtime-core": "^3.3.4",
    "@vue/test-utils": "^2.4.1",
    "c8": "^8.0.1",
    "commitlint": "^17.7.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.17.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-sass": "^5.1.0",
    "happy-dom": "^10.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "postcss-html": "^1.5.0",
    "prettier": "^3.0.1",
    "release-it": "^16.1.5",
    "sass": "^1.65.1",
    "stylelint": "^15.10.2",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-recommended-less": "^1.0.4",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-prettier": "^4.0.2",
    "sucrase": "^3.34.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-dts": "1.4.1",
    "vite-plugin-vue-setup-extend": "^0.4.0",
    "vitest": "^0.34.1",
    "vue": "^3.2.36"
  },
  "dependencies": {
    "@elong-ui/element": "workspace:^1.0.0",
    "@elong-ui/utils": "workspace:^1.0.0",
    "@elong-ui/vant": "workspace:^1.0.0",
    "enquirer": "^2.4.1"
  }
}
